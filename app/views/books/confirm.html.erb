<h3>以下の内容で、送信する。</h3>
<%= form_for(@book) do |f| %>
  <%= f.hidden_field :title %>
  <%= f.hidden_field :content %>
  <p>タイトル:<%= @book.title %></p>
  <p>本文:<%= @book.content %></p>
  <%= f.submit "登録する" %>
<% end %>
<%= form_for(@book, url: new_book_path, method: 'get') do |f| %>
  <%= f.hidden_field :title %>
  <%= f.hidden_field :content %>
  <%= f.submit "もどる", name: "back" %>
<% end %>